def aurebesh(texto):
    #Decalaramos las variables
    diccionario = {"a":"êêÄ","b":"êêÅ","c":"êíÇ","d":"êíÉ","e":"êíÜ","f":"êíã","g":"êíå","h":"êíç",
              "i":"êíé","j":"êíè","k":"êíê","l":"êíë","m":"êíí","n":"êíì", "√±":"√±", "o":"êíî",
               "p":"êíï","q":"êíñ","r":"êíó", "s":"êíò","t":"êíô","u":"êíé","v":"êíö","w":"êíõ",
               "x":"êíú","y":"êíù","z":"êíû"}
    global traduccion
    traduccion = ""
    diccionario_inverso = {valor:clave for clave, valor in diccionario.items()}
    
    #Traductor espa√±ol -> aurebesh
    def espa√±ol_aurebesh(texto):
        global traduccion
        
        for c in texto.lower():
            if c in diccionario:
                traduccion += diccionario[c]
            else:
                traduccion += " "
        print(traduccion)
        return
    
    #Traductor aurebesh -> espa√±ol
    def aurebesh_espa√±ol(texto):
        global traduccion
        
        for c in texto:
            if c in diccionario_inverso:
                traduccion += diccionario_inverso[c]
            else:
                traduccion += " "
        print(traduccion)
        return
    
    if texto.lower()[0] in diccionario:
        espa√±ol_aurebesh(texto.lower())
    else:
        aurebesh_espa√±ol(texto)
